#!/bin/bash

# Format
export F_RESET=$(tput sgr0) # Reset All
export F_BOLD=$(tput bold)
export F_DIM=$(tput dim)
export F_ITALIC=$(tput sitm)
export F_UNDERLINE=$(tput smul)
export F_BLINK=$(tput blink)
export F_INVERT=$(tput rev)
export F_HIDDEN=$(tput invis)
export F_STRIKETHROUGH=$(tput smso)
export F_MOVE_UP=$(tput cuu 1)
export F_CLEAR_LINE=$(tput el 1)

# Text
export T_NC=$(tput setaf 9) # No Color
export T_BLACK=$(tput setaf 0)
export T_RED=$(tput setaf 1)
export T_GREEN=$(tput setaf 2)
export T_YELLOW=$(tput setaf 3)
export T_BLUE=$(tput setaf 4)
export T_MAGENTA=$(tput setaf 5)
export T_CYAN=$(tput setaf 6)
export T_LGRAY=$(tput setaf 7)
export T_GRAY=$(tput setaf 8)
export T_LRED=$(tput setaf 9)
export T_LGREEN=$(tput setaf 10)
export T_LYELLOW=$(tput setaf 11)
export T_LBLUE=$(tput setaf 12)
export T_LMAGENTA=$(tput setaf 13)
export T_LCYAN=$(tput setaf 14)
export T_WHITE=$(tput setaf 15)

# Background
export B_NC=$(tput setab 9) # No Color
export B_BLACK=$(tput setab 0)
export B_RED=$(tput setab 1)
export B_GREEN=$(tput setab 2)
export B_YELLOW=$(tput setab 3)
export B_BLUE=$(tput setab 4)
export B_MAGENTA=$(tput setab 5)
export B_CYAN=$(tput setab 6)
export B_LGRAY=$(tput setab 7)
export B_GRAY=$(tput setab 8)
export B_LRED=$(tput setab 9)
export B_LGREEN=$(tput setab 10)
export B_LYELLOW=$(tput setab 11)
export B_LBLUE=$(tput setab 12)
export B_MAGENTA=$(tput setab 13)
export B_LCYAN=$(tput setab 14)
export B_WHITE=$(tput setab 15)

