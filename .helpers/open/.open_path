#!/bin/bash

while getopts ":p:" opt; do
    case $opt in
        p) path="${OPTARG}"
        ;;
        \?) echo "Invalid option -${OPTARG}" >&2
        exit 1
        ;;
    esac
done

case $path in
    build)
        path="./build"
    ;;
    coverage)
        path="./coverage"
    ;;
esac

if [ -z "${path}" ]; then
    echo -e "${B_RED}${T_WHITE}ERROR:${F_RESET} path parameter is missing"
    exit 1
fi

if [[ ! -d "${path}" ]]; then
  echo -e "${B_RED}${T_WHITE}ERROR:${F_RESET} path ${path} not found"
    exit 1
fi

case "$( which_os )" in
    LINUX*)
        isWSL=$(uname -a | grep WSL)
        if [[ -n "${isWSL}" ]]; then
            path="wslpath -w ${path/#./"\${PWD}"}"
            run_cmd "${UNC} \$(${path})"
            exit 0
        fi
    ;;
    WIN*)
        path="cygpath -w -a ${path}"
        run_cmd "${OPEN} \$(${path})"
        exit 0
    ;;
esac

run_cmd "${OPEN} \"${path}\""