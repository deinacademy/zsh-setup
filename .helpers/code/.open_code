#!/bin/bash

while getopts ":f:p:n:" opt; do
    case $opt in
        f) file="${OPTARG}"
        ;;
        p) profile="${OPTARG}"
        ;;
        n) new=""
        ;;
        \?) echo "Invalid option -${OPTARG}" >&2
        exit 1
    esac
done

if [ -z "${profile}" ]; then
    echo -e "${B_RED}${T_WHITE}ERROR:${F_RESET} profile parameter is missing"
    exit 1
fi

if [ "${!#}" == "-n" ]; then
    new="--new-window "
fi

path=""
if [[ -z "$file" ]]; then
    path="$( get_current_path )"
else
    path="$path $file"
fi


run_cmd "code ${new}--profile ${profile} ${path}"
