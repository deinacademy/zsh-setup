#!/bin/bash

while getopts ":f:p:n:" opt; do
    case $opt in
        f) file="${OPTARG}"
        ;;
        p) profile="${OPTARG}"
        ;;
        n) new=""
        ;;
        i) insiders=""
        ;;
        \?) echo "Invalid option -${OPTARG}" >&2
        exit 1
    esac
done

if [ -z "${profile}" ]; then
    msg_error "profile parameter is missing"
    exit 1
fi

if [ "${!#}" == "-n" ]; then
    new="--new-window "
fi

path=""
if [[ -z "$file" ]]; then
    path="$( get_current_path )"
else
    path="$file"
fi

version="code"
if [ "${!#}" == "-i" ]; then
    version="code-insiders"
fi

run_cmd "${version} ${new}--profile ${profile} ${path}"
