#!/bin/bash

# Android Debug Bus
# brew install --cask android-platform-tools
alias ad="adb devices"

# Screen Copy
# brew install scrcpy
alias scp="scrcpy --no-audio"
alias snd="scrcpy"
alias scpr="scrcpy --no-audio --show-touches --record=android-screen-record.mp4"

if [[ "$( which_os )" == "OSX" ]]; then
    alias sdc='caffeinate -i -u -s "scrcpy"'
fi
